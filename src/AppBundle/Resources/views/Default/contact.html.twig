{% endblock %}
    
{% block body %}
    {# parent() #}
    {% from 'AppBundle:admin:macro.html.twig' import inputEditButtons as inputEditButtons %}
        
    {% dump(generaltranslation) %}
    {% dump(entries) %}
    
    
    <!-- Content -->
    <!-- Page Content -->
    <div class="container">
        <br>
        <!-- Content Row -->
        <div class="row">
            <!-- Map Column -->
            <div class="col-md-8">
