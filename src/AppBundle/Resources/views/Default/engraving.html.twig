{% extends '::base.html.twig' %}

{% block navigation %}
    {% include 'AppBundle:Default:nav.html.twig' %}
{% endblock %}
    
{% block body %}
    {# parent() #}
    {# Twig macros #}
    
    {% from 'AppBundle:admin:macro.html.twig' import inputEditButtons as inputEditButtons %}
    {% from 'AppBundle:admin:macro.html.twig' import inputThumbnailCarouselEntry as inputThumbnailCarouselEntry %}
    
    {# dump(generaltranslation) #}
    {# dump(entries) #}

    
    <!-- Page Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-header">
                    <h1>{{ generaltranslation.engraving_title }}</h1>                
                        {% if app.user %}
                            <p>{{ inputEditButtons(adminGeneralTextRoute, 'engraving_title') }}</p>
                        {% endif %}
                        {{ generaltranslation.engraving_description }}
                        {% if app.user %}
                            <p>{{ inputEditButtons(adminGeneralTextRoute, 'engraving_description') }}</p>
                        {% endif %}
                </div>
            </div>
        </div>
        
        <!-- Item Row -->
        {% for entry in entries %}
            {% if entry.type == 'thumbnail_carousel_engraving' %}
                {{ inputThumbnailCarouselEntry(entry,adminEditEntryRoute,loop.index0) }}
            {% endif %}
        {% endfor %}

    <!-- /.container -->
    </div>

    
    
{% endblock %}